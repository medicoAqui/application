<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Activitys.MenuPrincipal"
    android:background="@drawable/gradient_background">

    <ImageView
        android:id="@+id/button_cadastro_paciente"
        android:layout_width="150dp"
        android:layout_height="177dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="117dp"
        android:layout_marginStart="117dp"
        android:adjustViewBounds="false"
        android:baselineAligned="true"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        android:src="@drawable/type_register_paciente"
        app:layout_constraintBottom_toTopOf="@+id/button_cadastro_medico"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_tollbar_02" />

    <ImageView
        android:id="@+id/button_cadastro_medico"
        android:layout_width="150dp"
        android:layout_height="169dp"
        android:layout_gravity="center"
        android:layout_marginBottom="68dp"
        android:layout_marginEnd="117dp"
        android:layout_marginStart="117dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        android:src="@drawable/type_register_medico"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_cadastro_paciente" />

</android.support.constraint.ConstraintLayout>